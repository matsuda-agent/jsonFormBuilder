{
"forms": 
[
  {  
    "formId" : 1,
    "title": "Applicant Details",
    "formType": "multi",
    "appendButtonName": "Add Applicant",
    "fieldArrayName": "applicants",
    "type": "object",
    "required": ["title" , "firstName", "lastName" , "dateOfBirth"] ,
    "fields" : [
      {
        "id" : 1,
        "name" : "title",
        "title": "Title",
        "description": "Enter your title",
        "type": "select",
        "is_mandatory": true, 
        "options" : [
          { "label": "Mr", "value": "mr" },
          { "label": "Miss", "value": "miss" },
          { "label": "Mrs", "value": "mrs" }
        ]
      },
      {
        "id" : 2,
        "name" : "firstName",
        "title": "First name",
        "description": "Enter your first name",
        "type": "text",
        "is_mandatory": true
      },
      {
        "id" : 3,
        "name" : "lastName",
        "title": "Last name",
        "description": "Enter your last name",
        "type": "text",
        "is_mandatory": true
      },
      {
        "id" : 4,
        "name" : "dateOfBirth",
        "title": "Date Of Birth",
        "description": "Enter your date of birth",
        "type": "date",
        "is_mandatory": true
      },
      {
        "id" : 5,
        "name" : "phone",
        "title": "Phone Number",
        "description": "Enter your phone number",
        "type": "phone",
        "is_mandatory": true
      },
      {
        "id" : 6,
        "name" : "smoker_status",
        "title": "",
        "description": "Are you a smoker?",
        "type": "checkbox",
        "is_mandatory": true
      }
    
    ]
  },
  {
    "formId" : 2,
    "formType": "single",
    "title": "Applicant Address Details",
    "type": "object",
    "required": ["address"],
    "fields" : [
      {
        "id" : 1,
        "name" : "address",
        "title": "Address",
        "description": "Enter your Address",
        "type": "carray",
        "is_mandatory": true,
        "subFields": [
          {
            "id" : 1,
            "name" : "postcode",
            "title": "Post Code",
            "description": "Enter your postcode",
            "type": "text",
            "is_mandatory": true
          },
          {
            "id" : 2,
            "name" : "Country",
            "title": "Country",
            "description": "Enter your Country",
            "type": "text",
            "is_mandatory": true
          }
        ],
        "condition" : {
          "fieldName": "Country",
          "if": {
            "and": [
              {
                "property": "watchFields",
                "notNull": true
              },
              {
                "property": "watchFields.length",
                "greaterThan": 0
              },
              {
                "property": "watchFields[watchFields.length-1].Country",
                "equals": "a"
              }
            ]
          },
          "action": "append(FieldValues)"
        }
      }]
    
  },
  {
    "formId" : 3,
    "formType": "single",
    "title": "Employed Details",
    "type": "object",
    "required": ["address"],
    "fields" : [
      {
        "id" : 1,
        "name" : "commence_date",
        "title": "Commence Date",
        "description": "When did you start working?",
        "type": "date",
        "is_mandatory": true
      },
      {
        "id" : 2,
        "name" : "employment_type",
        "title": "Employment Type",
        "description": "Enter your Employment Type",
        "type": "select",
        "is_mandatory": true,
        "options" : [
          { "label": "Full Time", "value": "full_time" },
          { "label": "Part Time", "value": "part_time" },
          { "label": "Contract", "value": "contract" }
        ]
      },
      {
        "id" : 3,
        "name" : "probation_status",
        "title": "",
        "description": "Are you on probation?",
        "type": "checkbox",
        "is_mandatory": true
      },
      {
        "id" : 4,
        "name" : "income_currency",
        "title": "Is your income in foreign currency?",
        "description": "Is your income in foreign currency?",
        "type": "ccheckbox",
        "is_mandatory": true,
        "subFields" : [
          {
            "id" : 1,
            "name" : "currency_details",
            "title": "Currency Details",
            "description": "Please provide currency details",
            "type": "text",
            "is_mandatory": true
          }
        ]

      },
      {
        "id" : 5,
        "name" : "income_details",
        "title": "Income Details",
        "description": "Please Provide More details",
        "type": "textarea",
        "is_mandatory": true
      }
      
    
    ]
  }
]}
