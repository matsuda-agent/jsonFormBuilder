{
"forms": 
[
  {  
    "formId" : 1,
    "title": "Applicant Details",
    "formType": "multi",
    "appendButtonName": "Add Applicant",
    "type": "object",
    "required": ["title" , "firstName", "lastName"] ,
    "fields" : [
      {
        "id" : 1,
        "name" : "title",
        "title": "Title",
        "description": "Enter your title",
        "type": "select",
        "is_mandatory": true, 
        "options" : [
          { "label": "Mr", "value": "mr" },
          { "label": "Miss", "value": "miss" },
          { "label": "Mrs", "value": "mrs" }
        ]
      },
      {
        "id" : 2,
        "name" : "firstName",
        "title": "First name",
        "description": "Enter your first name",
        "type": "text",
        "is_mandatory": true
      },
      {
        "id" : 3,
        "name" : "lastName",
        "title": "Last name",
        "description": "Enter your last name",
        "type": "text",
        "is_mandatory": true
      }]
  },
  {
    "formId" : 2,
    "formType": "single",
    "title": "Applicant Address Details",
    "type": "object",
    "required": ["address"],
    "fields" : [
      {
        "id" : 1,
        "name" : "address",
        "title": "Address",
        "description": "Enter your Address",
        "type": "carray",
        "is_mandatory": true,
        "subFields": [
          {
            "id" : 1,
            "name" : "postcode",
            "title": "postcode",
            "description": "Enter your postcode",
            "type": "text",
            "is_mandatory": true
          },
          {
            "id" : 2,
            "name" : "Country",
            "title": "Country",
            "description": "Enter your Country",
            "type": "text",
            "is_mandatory": true
          }
        ],
        "condition" : {
          "fieldName": "Country",
          "if": {
            "and": [
              {
                "property": "watchFields",
                "notNull": true
              },
              {
                "property": "watchFields.length",
                "greaterThan": 0
              },
              {
                "property": "watchFields[watchFields.length-1].Country",
                "equals": "a"
              }
            ]
          },
          "action": "append(FieldValues)"
        }
      }]
    
  }
]}
